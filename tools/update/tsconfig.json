    "declarationDir": "./dist/types"
  },
  "references": [
    {
      "path": "../build"
    },
    {
      "path": "../meta"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.stories.*"
  ]
}
