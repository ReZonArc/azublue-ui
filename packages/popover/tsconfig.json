{
  "extends": "@lg-tools/build/config/package.tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@leafygreen-ui/icon/dist/*": [
        "../icon/src/generated/*"
      ],
      "@leafygreen-ui/*": [
        "../*/src"
      ]
    },
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*",
    "../../typings/*"
  ],
  "exclude": [
    "**/*.stories.*"
  ],
  "references": [
    {
      "path": "../button"
    },
    {
      "path": "../emotion"
    },
    {
      "path": "../hooks"
    },
    {
      "path": "../lib"
    },
    {
      "path": "../polymorphic"
    },
    {
      "path": "../portal"
    },
    {
      "path": "../tokens"
    },
    {
      "path": "../leafygreen-provider"
    }
  ]
}
