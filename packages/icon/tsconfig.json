{
  "extends": "@lg-tools/build/config/package.tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "paths": {
      "@leafygreen-ui/*": [
        "../*/src"
      ]
    },
    "baseUrl": ".",
    "outDir": "./dist",
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    ".svgrrc.js",
    "constants.mjs"
  ],
  "exclude": [
    "**/*.stories.*"
  ],
  "references": [
    {
      "path": "../emotion"
    },
    {
      "path": "../lib"
    }
  ]
}
