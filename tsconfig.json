{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@az-tools/build/config/package.tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "rootDir": ".",
    "composite": true,
    "paths": {
      "@azublue-ui/icon/dist/*": ["./packages/icon/src/generated/*"],
      "@azublue-ui/*": ["packages/*/src"],
      "@az-charts/*": ["charts/*/src"],
      "@az-chat/*": ["chat/*/src"],
      "@az-tools/*": ["tools/*/src"]
    }
  },
  "include": ["./charts", "./chat", "./packages", "./tools"],
  "exclude": ["node_modules", "**/dist"]
}
